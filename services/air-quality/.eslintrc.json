{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "indent": ["warn", 2],
    "key-spacing": ["warn", { "align": "colon" }],
    "linebreak-style": ["error","unix"],
    "quotes": [ "warn", "single"],
    "semi": ["warn", "never"],
    "quote-props": ["warn", "as-needed"],
    "no-unused-vars": ["warn"]
  }
}
